<body>

  <section class="h-50" style="background-color: #eee;">
    <div class="container h-50">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
          <div class="card text-black my-4" style="border-radius: 25px;">
            <div class="card-body p-md-5">
              <div class="row justify-content-center">
                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                  <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Log In</p>

                  <form class="mx-1 mx-md-4" action="/auth/login" method="POST">

                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <input type="email" id="form3Example4c" name="email" class="form-control"
                          placeholder="@email.com" />

                        {{!-- incorrect email--alert box --}}
                        <div class="fs-4 fw-bolder text-danger"> {{incorrectEmail}}</div>

                      </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">

                      <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <input type="password" id="form3Example4cd" name="password" class="form-control"
                          placeholder="Password" />

                        {{!-- incorrect password--alert box --}}
                        <div class="fs-4 fw-bolder text-danger"> {{incorrectPassword}}</div>
                      </div>
                    </div>



                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                      <button type="submit"
                        class="btn btn-primary btn-lg w-50 mt-4 fw-bolder text-dark bg-warning border- #198754 border-2">
                        Log In</button>
                    </div>

                  </form>

                </div>
                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                  <img src="/images/signup-image/draw1.webp"
                    class="img-fluid" alt="Sample image">

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>



</body>