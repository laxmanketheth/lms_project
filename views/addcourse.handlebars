                                                {{!--====================================Edit course
                                                for================================ --}}

                                                <form action="/courses/addcourse" method="POST">

                                                    <div class="mb-3 row">
                                                        <label for="courseName"
                                                            class="col-sm-3 col-form-label fw-bold editcourse">Course Name</label>
                                                        <div class="col-sm-9">
                                                            <input type="text" class="form-control fw-bold"
                                                                name="course_name" id="courseName"
                                                                placeholder="Enter course name">
                                                        </div>
                                                    </div>
                                                    <div class="mb-3 row">
                                                        <label for="price" class="col-sm-3 col-form-label fw-bold editcourse">Price
                                                            $</label>
                                                        <div class="col-sm-9">
                                                            <input type="number" name="price"
                                                                class="form-control fw-bold" id="price"
                                                                placeholder="Enter price in $ HKD">
                                                        </div>
                                                    </div>
                                                    <div class="mb-3 row">
                                                        <label for="duration"
                                                            class="col-sm-3 col-form-label fw-bold editcourse">Duration</label>
                                                        <div class="col-sm-9">
                                                            <input type="text" name="duration"
                                                                class="form-control fw-bold" id="duration"
                                                                placeholder="Enter duration">
                                                        </div>
                                                    </div>
                                                    <div class="mb-3 row">
                                                        <label for="startDate"
                                                            class="col-sm-3 col-form-label fw-bold editcourse">Start Date</label>
                                                        <div class="col-sm-9">
                                                            <input type="date" name="start_date"
                                                                class="form-control fw-bold" id="startDate">
                                                        </div>
                                                    </div>
                                                    <div class="mb-3 row">
                                                        <label for="endDate" class="col-sm-3 col-form-label fw-bold editcourse">End
                                                            Date</label>
                                                        <div class="col-sm-9">
                                                            <input type="date" name="end_date"
                                                                class="form-control fw-bold" id="endDate">
                                                        </div>
                                                    </div>
                                                    <div class="mb-3 row">
                                                        <label for="courseDescription"
                                                            class="col-sm-3 col-form-label ms-0 fw-bold editcourse">Course
                                                            Description</label>
                                                        <div class="col-sm-9">
                                                            <textarea class="form-control fw-bold"
                                                                name="course_description" id="courseDescription"
                                                                rows="3"
                                                                placeholder="Enter course description"></textarea>
                                                        </div>
                                                    </div>
                                                    <div class="mb-3 row">
                                                        <div class="col-sm-9 offset-sm-3 ms-3 ">
                                                            <button type="submit"
                                                                class="btn btn-success btn-lg w-75" id="submitbutton">Submit Course</button>
                                                        </div>
