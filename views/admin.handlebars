  <link rel="stylesheet" href="/css/users.css">

</head>



<body>


  {{!--====================================================== nav bar of admin
  page============================================= --}}

  <nav class="navbar navbar-expand-lg navbar-light bg-warning fs-5 fw-bold">
    <div class="container-fluid">
      <a class="navbar-brand me-5 ml-3" href="#"></a>
      <a class="navbar-brand codingguru fs-2" href="/">Coding Guru</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown"
        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav">

          {{!-- <li class="nav-item">
            <a class="nav-link mydashboard" href="#">My Dashboard</a>
          </li> --}}

          <li class="nav-item">
            <a class="nav-link mydashboard" id="logOutBtn" href="/auth/login">Log Out</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>


  {{!--============================================= remaining page of admin
  page=============================================== --}}

  <h1 class="text-center  text-warning bg-light">Admin's Corner</h1>
  <div class="container bg-light my-5 ">
    <div class="row">
      <h1 class="text-center welcome">Welcome back, Mr. {{user.first_name}} {{user.last_name}} !</h1>
      <span id="userId" class="d-none">{{user.id}}</span>
      <span id="email" class="d-none">{{user.email}}</span>
      <span id="user_type" class="d-none">{{user.user_type}}</span>
      <span id="first_name" class="d-none">{{user.first_name}}</span>
      <span id="last_name" class="d-none">{{user.last_name}}</span>
      <span id="contact_no" class="d-none">{{user.contact_no}}</span> 
    </div>
  </div>


  <div class="container bg-light my-3 w-25 ">
    <div class="row">
      <button class="h-50 bg-danger "><a href="/courses/addcourse" class="text-decoration-none text-light fs-2"> Add
          Course </a></button>
    </div>
  </div>




  <div class="container bg-secondary my-5 ">
    <div class="row">
      <div class="col-sm-12 text-center my-2 text-dark fs-5 bg-light">
        <!-- Content goes here -->
        <h1 class="fw-light">All Courses</h1>
      </div>
    </div>
  </div>

  {{!--============================================ cards for courses ====================================--}}

  {{!-- ==========some css styling========== --}}

  <style>
    .big-courses-container {
      background-color: #f8f9fa
    }
  </style>


  <div class="container bg-secondary my-5 ">
    <div class="row big-courses-container">


      {{!-- <div class="row mx-3"> --}}
        {{!-- ******course data received from all courses API***** --}}
        {{#each courses}}
        <div class="col-sm-6 big-courses-container">
          <div class="card my-3 mx-5" style="background-color: rgb(218, 233, 193);">
            <div class="card-body">

              {{!-- received courseid also to use in frontend in editcourse.js --}}
              <p class="d-none" id="courseId">{{id}}</p>
              <h3 class="card-title">Course Name :<span> {{course_name}}</span></h3><br>
              <h5 class="card-title">Price :<span> {{price}}</span></h5>
              <h5 class="card-title">Duration :<span> {{duration}}</span></h5>
              <h5 class="card-title">Start-Date : <span class="startDate">{{start_date}} </span></h5>
              <h5 class="card-title">End-Date : <span class="endDate">{{end_date}} </span></h5>
              <p class="card-title">Description :<span> {{course_description}}</span></p>

              <form action="/courses/updateCourseForm" method="POST">
                <div class="my-4 d-flex ">
                    {{!-- // the name value in input field should be same as accepted after req.body// --}}
                  {{!-- //the id here is received from all courses api call made before and then sent to backend dynamically
                        so that we can render a update course page from backend// --}}
                  <input class="d-none" type="text" value="{{id}}" name="id"> 
                  <button href="#" class="btn fw-bold me-4 h-25" style="background-color:rgb(218, 157, 43)" id="editbtn"
                    type="submit">Edit Course</button>
              </form>

              <form action="/courses/deleteCourse" method="POST">
                <input class="d-none" type="text" value="{{id}}" name="id">
                <button href="#" class="btn fw-bold" type="submit" id="deletebtn"
                  style="background-color: rgb(201, 1, 1);">Delete Course</button>
              </form>


            </div>

          </div>
        </div>
      </div>

      {{/each}}

    </div>
  </div>

  <script src="/javascript/user.js"></script>

