<link rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">




<body>



    <div class="happy-students-textbox row container-fluid">
        <div class="col-12 my-5 ">
            <div class="responsive-content text-center">




                <section class="h-50" style="background-color: #eee;">
                    <div class="container h-50">
                        <div class="row d-flex justify-content-center align-items-center h-100">
                            <div class="col-lg-12 col-xl-11">
                                <div class="card text-black my-4" style="border-radius: 25px;">
                                    <div class="card-body p-md-5">
                                        <div class="row justify-content-center w-100">
                                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Edit Course
                                                    Data</p>
                                                {{!--====================================Edit course
                                                for================================ --}}

                                                <form action="/courses/updateSingleCourse" method="POST">
                                                    <div class="mb-3 row">
                                                        
                                                        <input class="d-none" type="text" name="id" value= "{{editcoursedata.id}}">

                                                        <label for="courseName"
                                                            class="col-sm-3 col-form-label fw-bold editcourse">Course
                                                            Name</label>                                    
                                                        <div class="col-sm-9">
                                                            <input type="text" class="form-control fw-bold"
                                                                name="course_name" id="courseName"
                                                                value="{{editcoursedata.course_name}}">
                                                        </div>

                                                    </div>
                                                    <div class="mb-3 row">
                                                        <label for="price"
                                                            class="col-sm-3 col-form-label fw-bold editcourse">Price
                                                            $</label>
                                                        <div class="col-sm-9">
                                                            <input type="number" name="price"
                                                                value="{{editcoursedata.price}}"
                                                                class="form-control fw-bold" id="price"
                                                                placeholder="Enter price in $ HKD">
                                                        </div>
                                                    </div>
                                                    <div class="mb-3 row">
                                                        <label for="duration"
                                                            class="col-sm-3 col-form-label fw-bold editcourse">Duration</label>
                                                        <div class="col-sm-9">
                                                            <input type="text" name="duration"
                                                                value="{{editcoursedata.duration}}"
                                                                class="form-control fw-bold" id="duration"
                                                                placeholder="Enter duration">
                                                        </div>
                                                    </div>
                                                    <div class="mb-3 row">
                                                        <label for="startDate"
                                                            class="col-sm-3 col-form-label fw-bold editcourse">Start
                                                            Date</label>
                                                        <div class="col-sm-9">
                                                            <input type="text" name="start_date"
                                                                value="{{editcoursedata.start_date}}"
                                                                class="form-control fw-bold" id="startDate">
                                                        </div>
                                                    </div>
                                                    <div class="mb-3 row">
                                                        <label for="endDate"
                                                            class="col-sm-3 col-form-label fw-bold editcourse">End
                                                            Date</label>
                                                        <div class="col-sm-9">
                                                            <input type="text" name="end_date"
                                                                value="{{editcoursedata.end_date}}"
                                                                class="form-control fw-bold" id="endDate">
                                                        </div>
                                                    </div>
                                                    <div class="mb-3 row">
                                                        <label for="courseDescription"
                                                            class="col-sm-3 col-form-label ms-0 fw-bold editcourse">Course
                                                            Description</label>
                                                        <div class="col-sm-9">

                                                            <div class="col-sm-9">
                                                                <input type="text" name="course_description"
                                                                    value="{{editcoursedata.course_description}}"
                                                                    class="form-control " id="coursedescription">
                                                            </div>
                                                      
                                                        </div>
                                                    </div>
                                                    <div class="mb-3 row">
                                                        <div class="col-sm-9 offset-sm-3 ms-3 ">
                                                            <button type="submit" class="btn btn-primary btn-lg w-50"
                                                                id="submitbutton">Submit</button>
                                                        </div>
                                                    </div>
                                                </form>


                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>


            </div>
        </div>
    </div>

    <script src="/javascript/editcourse.js"></script>


</body>